<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="visible"
    tools:context=".DetailRumahAdat">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/cardview_light_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_detail_rmh"
            android:layout_width="420dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_detail_rmh">
            <View
                android:layout_width="match_parent"
                android:scrollbarStyle="outsideInset"
                android:layout_height="wrap_content">

            </View>
            <TextView
                android:id="@+id/nm"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Nama  : "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nm_rmhadat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nm"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/asl"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Asal     : "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/asl_rmhadat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/asl"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc_rmhadat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/asl_rmhadat" />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>

